<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>课程列表</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

<link href="__STATIC__/admin/css/adminStyle.css" rel="stylesheet" type="text/css" />
<script src="__STATIC__/admin/js/jquery.js"></script>
<script src="__STATIC__/admin/js/public.js"></script>

</head>
<body>
 <div class="wrap">
  <div class="page-title">
    <span class="modular fl"><i></i><em>课程列表</em></span>
    <span class="modular fr"><a href="{:url('index/edit_product')}" class="pt-link-btn">+添加课程</a></span>
  </div>
  <div class="operate">
   <form>
    <select class="inline-select">
     <option>前端</option>
     <option>后端</option>
     <option>移动</option>
     <option>数据库</option>
    </select>
    <input type="text" class="textBox length-long" placeholder="输入课程名称..."/>
    <input type="button" value="查询" class="tdBtn"/>
   </form>
  </div>
  <table class="list-style Interlaced" height="16%">
   <tr>
    <th class="col-2">ID</th>
    <th class="col-2">课程名称</th>
    <th class="col-2">类型</th>
    <th class="col-2">方向</th>
    <th class="col-2">教师</th>
	<th class="col-2">操作</th>
   </tr>
      {volist name="course" id="c" }
   <tr>
    <td class="center"><span><input type="checkbox" class="middle children-checkbox"/>{$c.cid}</span></td>
    <td class="center"><span>{$c.course_name}</span></td>
    <td class="center"><span >{$c.type}</span></td>
    <td class="center"><span>{$c.direction}</span></td>
    <td class="center"><span>{$c.teacher_name}</span></td>
    <td class="center">
        <a href="{:url('index/edit_product')}" title="编辑"><img src="__STATIC__/admin/imgs/icon_edit.gif"/></a>
        <a title="删除"><img src="__STATIC__/admin/imgs/icon_drop.gif"/></a>
    </td>
   </tr>
      {/volist}
  </table>
  <!-- BatchOperation -->
  <div style="overflow:hidden;">
      <!-- Operation -->
	  <div class="BatchOperation fl">
	   <input type="checkbox" id="del"/>
	   <label for="del" class="btnStyle middle">全选</label>
	   <input type="button" value="批量删除" class="btnStyle"/>
	  </div>
	  <!-- turn page -->
	  <div class="turnPage center fr">
	   <a>第一页</a>
	   <a>1</a>
	   <a>最后一页</a>
	  </div>
  </div>
 </div>
</body>
</html>
